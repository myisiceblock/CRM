<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.ClueRemarkDao">

    <delete id="delete">
        delete from tbl_clue_remark where id=#{id}
    </delete>

    <select id="getListByClueId" resultType="com.bjpowernode.crm.workbench.domain.ClueRemark">
        select * from tbl_clue_remark where clueId=#{clueId}
    </select>

	<select id="getCountByAids" resultType="int">
        select count(*) from tbl_clue_remark
        where clueid in
        <foreach collection="array" open="(" item="aid" close=")" separator=",">
            #{aid}
        </foreach>
    </select>

    <delete id="deleteByAids">
        delete from tbl_clue_remark
        where clueid in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </delete>
  	
</mapper>

































